
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

    <form asp-action="Login" asp-controller="Account" method="post">
    <div asp-validation-summary="All" class="text-center text-red-800"></div>
        <div class="mb-4">
            <label for="email" class="shad-input-label">Email</label>
            <input type="email" id="email" name="email" required
            class="shad-input" />
        </div>
        <div class="mb-6">
            <label for="password" class="shad-input-label">Password</label>
            <input type="password" id="password" name="password" required
            class="shad-input" />
        </div>

        <div class="flex justify-between">
            <button type="submit" class="w-full rounded-md bg-green-700 py-2 text-white transition duration-200 hover:bg-green-600">
                Login
            </button>
        </div>
        <div>
            <p class="mt-8 text-center text-green-700">
            Don’t have an account? <a asp-controller="Account" asp-action="Register"  class="text-green-800 hover:text-green-600">Signup</a>
        </p>
        </div>
    </form>




