
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

            <form method="post">
                <div class="mb-4">
                    <label for="email" class="text-gray-700 block text-sm font-medium">Email</label>
                    <input type="email" id="email" name="email" required
                           class="mt-1 border-gray-300 p-2 block w-full rounded-md border focus:ring-green-500 focus:border-green-500" />
                </div>
                <div class="mb-6">
                    <label for="password" class="text-gray-700 block text-sm font-medium">Password</label>
                    <input type="password" id="password" name="password" required
                           class="mt-1 border-gray-300 p-2 block w-full rounded-md border focus:ring-green-500 focus:border-green-500" />
                </div>
                <div class="flex justify-between">
                    <button type="submit" class="bg-green-400 text-white py-2 w-full rounded-md transition duration-200 hover:bg-green-600">
                        Login
                    </button>
                </div>
            </form>




