@model CancelAppointmentVM
@{
    ViewData["Title"] = "Doctor";
    Layout = "~/Views/Shared/PatientLayout.cshtml";
}
<div class="mx-auto max-w-2xl rounded-lg bg-white p-6 shadow-md">
    <h2 class="mb-6 text-xl font-semibold text-gray-800">Are You Sure You Want to Cancel This Appointment?</h2>

    <form asp-action="Cancel" method="post">

        <div class="mb-4">
            <label class="mb-2 block text-sm font-bold text-gray-700" for="cancel">
                Cancellation Reason
            </label>
            <textarea asp-for="CancellationReason" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" id="cancel" placeholder="Cancellation reason"></textarea>
            <span asp-validation-for="CancellationReason" class="text-sm text-red-500"></span>
        </div>

        <input type="hidden" asp-for="ID" />
        <div class="flex flex-col items-center justify-center gap-3 md:flex-row">
            <button type="submit" class="w-[200px] rounded bg-blue-400 px-4 py-2 font-bold text-white hover:bg-blue-700 focus:outline-none focus:shadow-outline">
                Cancel Appointment
            </button>
            <a asp-action="Index" class="w-[200px] rounded bg-red-400 px-4 py-2 text-center font-bold text-white hover:bg-red-800 focus:outline-none focus:shadow-outline">
                Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
