
@{
    ViewData["Title"] = "AdminLayout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="mb-3 border-b bg-white">
    <nav class="container mx-auto flex items-center justify-between px-4 py-3">
        <a href="/" class="text-xl font-semibold text-green-600">
            <img src="/assets/icons/logo-icon.svg" />
        </a>

        <!-- Mobile menu button -->
        <button onclick="handleToggle()" class="fixed right-[25px] top-[15px] z-50 block rounded-md border border-gray-600 bg-white p-1 text-gray-700 md:hidden" id="mobile-menu-button">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
        </button>

        <!-- Desktop menu -->
        <div class="hidden space-x-6 md:flex">
            <a asp-action="Index" asp-controller="Appointment" class="px-3 py-1 text-gray-800 hover:bg-gray-200">Appointments</a>
            <a asp-action="Index" asp-controller="Doctor" class="nav-item">Doctors</a>
            <a asp-action="Index" asp-controller="Clinic" class="nav-item">Clinics</a>
            <a asp-action="Index" asp-controller="Patient" class="nav-item">Patients</a>
        </div>

        <!-- Mobile menu -->
        <div class="mobile-menu z-40 fixed inset-0 flex hidden h-[100vh] w-full md:hidden">
        <div class="flex flex-col bg-light-200">
                <a href="/" class="m-4 text-xl font-semibold text-green-600">
                    <img src="/assets/icons/logo-full.svg" />
                </a>
            <a asp-action="Index" asp-controller="Appointment" class="nav-item_mobile">Appointments</a>
                <a asp-action="Index" asp-controller="Doctor" class="nav-item_mobile">Doctors</a>
                <a asp-action="Index" asp-controller="Clinic" class="nav-item_mobile">Clinics</a>
                <a asp-action="Index" asp-controller="Patient" class="nav-item_mobile">Patients</a>
        </div>
            <div onclick="handleToggle()" class="flex-1 opacity-60 cursor-pointer bg-black">

        </div>
        </div>
    </nav>
</header>
@RenderBody()
@RenderSection("Scripts", required: false)

<script>
    // Toggle mobile menu visibility
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.querySelector('.mobile-menu');

    function handleToggle(){ mobileMenu.classList.toggle('hidden');
    }
</script>
