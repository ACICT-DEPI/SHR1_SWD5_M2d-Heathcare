@model AppointmentVM
@{
    ViewData["Title"] = "Appointment";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="mx-auto max-w-2xl rounded-lg bg-white p-6 shadow-md">
    <h2 class="mb-6 text-2xl font-semibold text-gray-800">Create Appointment</h2>

    <form asp-action="Create" method="post">
        <div class="mb-4">
            <label class="mb-2 block text-sm font-bold text-gray-700" for="patientName">
                Patient Name
            </label>
            <input asp-for="PatientName" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" id="patientName" type="text" placeholder="Enter patient name">
            <span asp-validation-for="PatientName" class="text-sm text-red-500"></span>
        </div>

        <div class="mb-4">
            <label class="mb-2 block text-sm font-bold text-gray-700" for="doctorName">
                Doctor Name
            </label>
            <input asp-for="DoctorName" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" id="doctorName" type="text" placeholder="Enter doctor name">
            <span asp-validation-for="DoctorName" class="text-sm text-red-500"></span>
        </div>

        <div class="mb-4">
            <label class="mb-2 block text-sm font-bold text-gray-700" for="clinicName">
                Clinic Name
            </label>
            <input asp-for="ClinicName" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" id="clinicName" type="text" placeholder="Enter clinic name">
            <span asp-validation-for="ClinicName" class="text-sm text-red-500"></span>
        </div>

        <div class="mb-4">
            <label class="mb-2 block text-sm font-bold text-gray-700" for="schedule">
                Appointment Schedule
            </label>
            <input asp-for="Schedule" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" id="schedule" type="datetime-local">
            <span asp-validation-for="Schedule" class="text-sm text-red-500"></span>
        </div>

        <div class="mb-4">
            <label class="mb-2 block text-sm font-bold text-gray-700" for="status">
                Status
            </label>
            <select asp-for="Status" class="block w-full appearance-none rounded border border-gray-300 bg-white px-3 py-2 pr-8 leading-tight text-gray-700 focus:outline-none focus:shadow-outline">
                <option value="Scheduled">Scheduled</option>
                <option value="Completed">Completed</option>
                <option value="Cancelled">Cancelled</option>
            </select>
            <span asp-validation-for="Status" class="text-sm text-red-500"></span>
        </div>

        <div class="mb-4">
            <label class="mb-2 block text-sm font-bold text-gray-700" for="reason">
                Reason
            </label>
            <textarea asp-for="Reason" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" id="reason" placeholder="Reason for the appointment"></textarea>
            <span asp-validation-for="Reason" class="text-sm text-red-500"></span>
        </div>

        <div class="mb-4">
            <label class="mb-2 block text-sm font-bold text-gray-700" for="note">
                Note (Optional)
            </label>
            <textarea asp-for="Note" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" id="note" placeholder="Additional notes"></textarea>
            <span asp-validation-for="Note" class="text-sm text-red-500"></span>
        </div>

        <div class="mb-4">
            <label class="mb-2 block text-sm font-bold text-gray-700" for="cancellationReason">
                Cancellation Reason (Optional)
            </label>
            <textarea asp-for="CancellationReason" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" id="cancellationReason" placeholder="Reason for cancellation (if applicable)"></textarea>
            <span asp-validation-for="CancellationReason" class="text-sm text-red-500"></span>
        </div>

        <div class="flex items-center justify-between">
            <button type="submit" class="rounded bg-blue-500 px-4 py-2 font-bold text-white hover:bg-blue-700 focus:outline-none focus:shadow-outline">
                Create Appointment
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
